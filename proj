<script>
   
    const customers = [
        {
            branch: "Main Branch",
            name: "Alice Johnson",
            number: "CUST001",
            mobile: "+123456789",
            area: "Downtown",
            tube: "Yes",
            regulator: "No",
            safety: "Yes",
            remarks: "Regular customer"
        },
        {
            branch: "Sub Branch",
            name: "Bob Williams",
            number: "CUST002",
            mobile: "+987654321",
            area: "Uptown",
            tube: "No",
            regulator: "Yes",
            safety: "No",
            remarks: "Needs follow-up"
        }
    ];

   
    const customerTable = document.getElementById('customerTable');
    customers.forEach(customer => {
        const row = document.createElement('tr');
        row.innerHTML = `
            <td>${customer.branch}</td>
            <td>${customer.name}</td>
            <td>${customer.number}</td>
            <td>${customer.mobile}</td>
            <td>${customer.area}</td>
            <td>${customer.tube}</td>
            <td>${customer.regulator}</td>
            <td>${customer.safety}</td>
            <td>${customer.remarks}</td>
        `;
        customerTable.appendChild(row);
    });
</script>

